<h2>Login</h2>

<div class="row">
            <div class="col-md-6">
                <div class="login-card">
                    <h2 class="page-title">Login</h2>
                    <form class="form login-form">
                        <div class="form-group">
                            <label for="username-login">Username:</label>
                            <input class="form-input" type="text" user_id="username-login" />
                        </div>
                        <div class="form-group">
                            <label for="password-login">Password:</label>
                            <input class="form-input" type="text" user_id="password-login" />
                        </div>
                        <div class="form-group">
                            <button class="loginBtn2" type="submit">Login</button>
                        </div>
                        <h4>Not registered with us? Sign up Now!</h4>
                    </form>
                </div>
            </div>
            <div class="login-card">
                <h2 class="page-title">Sign Up</h2>
                <form class="form signup-form">
                    <div class="form-group">
                        <label for="username-signup">Username:</label>
                        <input class="form-input" type="text" user_id="username-signup" />
                    </div>
                    <div class="form-group">
                        <label for="password-signup">Password:</label>
                        <input class="form-input" type="text" user_id="password-signup" />
                    </div>
                    <div class="form-group">
                        <button class="signUpBtn" type="submit">Sign Up</button>
                    </div>
                </form>
            </div>
        </div>
        <script src="/public/js/login.js"></script>